    background: url('data:image/svg+xml;base64,PHN2ZyB3aWR0aD0iMjAiIGhlaWdodD0iMjAiIHZpZXdCb3g9IjAgMCAyMCAyMCIgZmlsbD0ibm9uZSIgeG1sbnM9Imh0dHA6Ly93d3cudzMub3JnLzIwMDAvc3ZnIj4KPGNpcmNsZSBjeD0iMTAiIGN5PSIxMCIgcj0iMTAiIGZpbGw9IiNmZmQ3MDAiLz4KPHBhdGggZD0iTTAgMTBjMC02LjEgNS05IDEwLTkgczEwIDIuOSAxMCA5LTEwIDktMTAgOSIgZmlsbD0iI2ZmZDcwMCIvPgo8L3N2Zz4=') no-repeat center;
